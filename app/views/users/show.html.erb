<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand font-weight-bold"><%= @user.name %>'s Profile</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
    <div class="navbar-nav w-100">
        <div class="container-fluid d-flex w-100 justify-content-between">
          <div class="d-flex flex-row">
            <%= link_to "Home", sessions_new_path, class:"nav-item nav-link" %>
            <%= link_to "All Restaurants", restaurants_path, class:"nav-item nav-link" %>
            <%= link_to "All Cities", cities_path, class:"nav-item nav-link" %>
          </div>
          <div>
            <%= link_to "Log out", logout_path, method: :delete, class:"nav-item nav-link text-right"%>
          </div>
      </div>
    </div>
